= render 'groups/content-left'

.content-right
  .group
    %p.group__name
      = @group.name
    %p.group__member
      MEMBER:
      = @users.pluck(:name).join(",")

    = link_to edit_group_path(@group) do
      %p.group__btn Edit

  = render partial: 'chat', collection: @messages, as: :message

  .bottom-content
    .submit
    =form_for [@group, @message] do |f|
      %p
        = f.text_field :body, class: "submit__content",placeholder: 'type a message'
      %i.fa.fa-file-image-o
      %p
        = f.submit type: "submit", class: "submit__btn", value: "Send"
