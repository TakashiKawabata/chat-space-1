= render 'groups/content-left'

.content-right
  .group
    %p.group__name
      = @group.name
    %p.group__member
      MEMBER:
      = @users.pluck(:name)

    = link_to edit_group_path(@group) do
      %p.group__btn Edit

  = render 'chat'

  .bottom-content
    .submit
      %p.submit__content type a message
      %i.fa.fa-file-image-o
    %p.submit__btn Send
