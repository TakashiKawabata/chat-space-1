= render 'groups/content-left'

.content-right
  .group
    %p.group__name
      = @group.name
    %p.group__member
      MEMBER:
      - @group.users.each do |user|
        = user.name + ","

    = link_to "/groups/#{@group.id}/edit" do
      %p.group__btn Edit

  = render 'chat'

  .bottom-content
    .submit
      %p.submit__content type a message
      %i.fa.fa-file-image-o
    %p.submit__btn Send
